<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="employee_dashboard.EmployeeDashboard">
        <div class="">
            <div>
                <center>
                    <h1 style="margin:20px;">
                        Employee Dashboard
                    </h1>
                </center>
            </div>
        </div>
        <div class="row main-section" style="margin-left: 120px; margin-right: 120px;">
            <!--            Attendance Tile-->
            <div id="attendance" class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                 style=" overflow: hidden; padding-top: 30px;">
                <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0,0,0.3,0.2);
                display: flex; justify-content: center;" role="button" t-on-click="attendanceTileClicked">
                    <div class="oh-card-body"
                         style="padding: 5px 5px; float: left; width: 100%;
                          height: auto; box-sizing: border-box; margin: 0;">
                        <div class="stat-widget-one">
                            <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                                <div style="background:#b7f7b0  ; width:65px; text-align: center;">
                                    <i class="fa fa-user"
                                       style="font-size:50px;"/>
                                </div>
                                <div class="stat_content" style="
                                  text-align: center; font-weight: bold;
                                  padding-top: 20px; padding-left: 80px;">
                                    <div class="stat-head"
                                         style="font-size: 14px;">Attendance
                                    </div>
                                    <div class="stat_count_lead"
                                         style="font-size: 17px;">
                                        <span id="templates">
                                            <div id="attendance_count" groups="hr.group_hr_user"/>
                                            <!--                                            <div id="total_attendance_count" groups="hr.group_hr_manager"/>-->
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--            Leave Tile-->
            <div id="leaves" class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                 style=" overflow: hidden; padding-top: 30px;">
                <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0,0,0.3,0.2);
                display: flex; justify-content: center;" role="button" t-on-click="leaveTileClicked">
                    <div class="oh-card-body"
                         style="padding: 5px 5px; float: left; width: 100%;
                          height: auto; box-sizing: border-box; margin: 0;">
                        <div class="stat-widget-one">
                            <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                                <div style="background:#f29191; width:65px; text-align: center;">
                                    <i class="fa fa-user"
                                       style="font-size:50px;"/>
                                </div>
                                <div class="stat_content" style="
                                  text-align: center; font-weight: bold;
                                  padding-top: 20px; padding-left: 80px;">
                                    <div class="stat-head"
                                         style="font-size: 14px;">Leaves
                                    </div>
                                    <div class="stat_count_lead"
                                         style="font-size: 17px;">
                                        <span id="templates">
                                            <div id="leave_count"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--       Projects Tile-->
            <div id="projects" class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                 style=" overflow: hidden; padding-top: 30px;">
                <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0,0,0.3,0.2);
                display: flex; justify-content: center;" role="button" t-on-click="projectTileClicked">
                    <div class="oh-card-body"
                         style="padding: 5px 5px; float: left; width: 100%;
                          height: auto; box-sizing: border-box; margin: 0;">
                        <div class="stat-widget-one">
                            <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                                <div style="background:yellow; width:65px; text-align: center;">
                                    <i class="fa fa-tasks text-mauve"
                                       style="font-size:50px;"/>
                                </div>
                                <div class="stat-content" style="
                                  text-align: center; font-weight: bold;
                                  padding-top: 20px; padding-left: 80px;">
                                    <div class="stat-head"
                                         style="font-size: 14px;">Projects
                                    </div>
                                    <div class="stat_count_opp"
                                         style="font-size: 17px;">
                                        <span id="templates">
                                            <div id="project_count"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
